@{
    ViewData["Title"] = "Projeleri Yönet";
}


<div class="container py-4">
    <h2 class="mb-4">Projeleri Yönet</h2>

    <div class="text-end mb-3">
        <button class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#projectPanel">
    + Yeni Proje Ekle
</button>
    </div>
<div id="projectsContainer">
    <!-- AJAX ile buraya yüklenecek -->
</div>
   
</div>



<!-- Slide-in Panel: Ekle / Düzenle -->
<div class="offcanvas offcanvas-top mx-4" tabindex="-1" id="projectPanel" aria-labelledby="projectPanelLabel" style="height: 100vh;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="projectPanelLabel">Proje</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
    </div>
    <div class="offcanvas-body" >
        <form id="projectForm">
            <input type="hidden" id="Id" name="Id">
            <div class="mb-2">
                <label class="form-label">Adı</label>
                <input type="text" name="Name" class="form-control" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Kategori</label>
                <input type="text" name="Category" class="form-control" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Teknolojiler</label>
                <input type="text" name="Technologies" class="form-control" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Açıklama</label>
                <textarea name="Description" class="form-control"></textarea>
            </div>
            <div class="mb-2">
                <label class="form-label">Detaylar</label>
                <textarea name="Details" class="form-control"></textarea>
            </div>
            <div class="mb-2">
                <label class="form-label">Tamamlanma Tarihi</label>
                <input type="date" name="CompletionDate" class="form-control" />
            </div>
        </form>
    </div>
    <div class="offcanvas-footer p-3 text-end border-top">
        <button class="btn btn-secondary me-2" data-bs-dismiss="offcanvas">İptal</button>
        <button class="btn btn-primary" onclick="saveProject()">Kaydet</button>
    </div>
</div>

@section Scripts {
    <script src="~/js/projects.js"></script>
}
