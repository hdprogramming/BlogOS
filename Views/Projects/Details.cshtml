@model BlogOS.Web.Models.Project

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 class="card-title text-center mb-4">@Model.Name</h2>

                    <p class="text-muted text-center mb-3">
                        <i class="bi bi-calendar3"></i>
                        Tamamlanma Tarihi: @Model.CompletionDate.ToString("dd.MM.yyyy")
                    </p>

                    <hr>

                    <h5 class="mb-3 text-primary">Proje Açıklaması</h5>
                    <p class="card-text">@Model.Description</p>

                    <h5 class="mt-4 mb-3 text-primary">Detaylar</h5>
                    <p>@Model.Details</p>

                    <div class="mt-4 text-end">
                        <a href="/Projects" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
